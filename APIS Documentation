  "userId": 1,
  "restaurantId": 2,
  "items": [
    {
      "menuItemId": 10,
      "quantity": 2,
      "price": 299.98
    }
  ],
  "totalAmount": 299.98,
  "status": "PLACED",
  "createdAt": "2025-04-17T10:25:00"
}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

